<% if (showGuide) { %>
document.addEventListener('DOMContentLoaded', () => {
  document.getElementById('onboarding-guide').style.display = 'block';
  showStep(1);
});
<% } %>

let currentGuideStep = 1;

function showStep(step) {
  currentGuideStep = step;

  document.querySelectorAll('.guide-step').forEach(el => el.style.display = 'none');
  const current = document.getElementById(`step-${step}`);
  if (current) current.style.display = 'block';

  removeAllHighlights();

  if (step === 2) {
    highlightElement('.nav-item[href="/goals"]');
  } else if (step === 3) {
    highlightElement('.nav-item[href="/analytics"]');
  }
}

function highlightElement(selector) {
  const el = document.querySelector(selector);
  if (el) {
    el.classList.add('guide-highlight');
    el.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }
}

function removeAllHighlights() {
  document.querySelectorAll('.guide-highlight').forEach(el => {
    el.classList.remove('guide-highlight');
  });
}

function nextStep(step) {
  showStep(step);
}

function prevStep(step) {
  showStep(step);
}

function skipGuide() {
  finishGuide(true);
}

function finishGuide(silent = false) {
  const guide = document.getElementById('onboarding-guide');
  if (guide) guide.style.display = 'none';
  removeAllHighlights();

  if (!silent) {
    alert("Great! You're all set. Start building your habits today! ğŸ’ª");
  }
}
</script>
