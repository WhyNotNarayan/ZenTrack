<!DOCTYPE html>
<html lang="en" data-theme="<%= theme || 'light' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="/dashboard.css">
  <title>ZenTrack - Monthly Tracker</title>
</head>
<body class="dashboard-body">

<% if (typeof showGuide !== 'undefined' && showGuide) { %>
  <!-- Guide overlay HTML -->
  <div id="guide" class="guide-overlay">
    <div class="guide-box">
      <h2 id="guideTitle">Welcome to ZenTrack ðŸŽ‰</h2>
      <p id="guideText">This is your dashboard. Here you can track goals.</p>
      <button id="nextStep">Next</button>
    </div>
  </div>
<% } %>

  <aside class="sidebar">
    <div class="sidebar-header">
      <h2 class="brand-logo">Zen<span>Track</span></h2>
    </div>
    <nav class="sidebar-nav">
      <a href="/" class="nav-item active"><i class="fas fa-calendar-check"></i> Tracker</a>
      <a href="/goals" class="nav-item"><i class="fas fa-plus-circle"></i> Manage Goals</a>
      <a href="/analytics" class="nav-item"><i class="fas fa-chart-pie"></i> Analytics</a>
    </nav>
   <div class="sidebar-footer">
  <div class="user-pill">
    <div>
      <p class="u-name"><%= user.username %></p>
      <p class="u-email"><%= user.email %></p> <!-- ðŸ‘ˆ Added line -->
      <a href="/logout" class="logout-link">Logout</a>
    </div>
  </div>
</div>
  </aside>

 <main class="main-content container-fluid">
  <header class="top-bar d-flex flex-wrap justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <!-- Toggle button for mobile -->
      <button class="btn btn-outline-primary d-md-none me-2" id="sidebarToggle">
        <i class="fas fa-bars"></i>
      </button>
      <h1><%= currentMonth %> Tracker</h1>
    </div>

  
    <div class="d-flex align-items-center">
  <i id="notificationBell" class="fas fa-bell text-secondary fs-4" style="cursor:pointer"></i>
  <div id="liveClock" class="ms-3"></div>
</div>
  
    <div id="liveClock"></div>
  </header>

  <div class="grid-container-card">
    <div class="table-responsive grid-viewport">
      <table class="zen-grid table table-bordered">
        <thead>
          <tr class="day-label-row">
            <th class="corner-label">GOALS</th>
            <th colspan="<%= dates.length %>" class="main-day-header">DAY</th>
          </tr>
          <tr class="date-number-row">
            <th class="sticky-goal-header"></th> 
            <% dates.forEach(date => { %>
              <th class="date-col-header">
                <%= moment(date).format('D') %>
              </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
         <% goals.forEach(goal => { %>
          <tr>
            <td class="sticky-goal-column">
              <div class="goal-name-wrapper">
                <%= goal.name %>
              </div>
            </td>

            <% dates.forEach(date => { 
              const isDisabled = moment(date).isAfter(moment().startOf('day'));
              const track = tracks.find(t => 
                t.goal && t.goal.toString() === goal._id.toString() && 
                moment(t.date).isSame(date, 'day')
              ); 
            %>
              <td class="grid-checkbox-cell" style="background-color: <%= !isDisabled && (!track || !track.completed) && moment(date).isBefore(moment().startOf('day')) ? '#d3d3d3' : (isDisabled && (!track || !track.completed) ? '#f0f0f0' : 'transparent') %>">
                <form action="/tracker" method="POST">
                  <input type="hidden" name="date" value="<%= moment(date).format('YYYY-MM-DD') %>">
                  <input type="hidden" name="goalId" value="<%= goal._id %>">
                  <label class="grid-check">
                    <input type="checkbox" name="completed" 
                      <%= track && track.completed ? 'checked' : '' %>
                      <%= isDisabled ? 'disabled' : '' %>
                      onchange="this.form.submit()">
                    <span class="checkmark-ui"></span>
                  </label>
                </form>
              </td>
            <% }) %>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="growth-analysis mt-4">
    <h2>User Growth Analysis</h2>
    <p>Small wins each day add up to big changesâ€”keep moving, youâ€™re building something powerful.</p>
    
    <!-- Bar Chart for Daily Growth -->
    <div class="chart-card mt-3">
      <canvas id="dailyGrowthChart"></canvas>
    </div>
  </div>
</main>

  <script>
  // Sidebar toggle
  document.getElementById('sidebarToggle').addEventListener('click', () => {
    document.querySelector('.sidebar').classList.toggle('active');
  });

  // Clock
  function updateClock() {
    const now = new Date();
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    const dateString = now.toLocaleDateString('en-US', options);
    const timeString = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
    document.getElementById('liveClock').innerHTML = `${dateString} | ${timeString}`;
  }
  setInterval(updateClock, 1000);
  updateClock();

  // Daily Growth Chart (all dates)
  const labels = <%- JSON.stringify(dates.map(d => moment(d).format("D MMM"))) %>;
  const dataValues = <%- JSON.stringify(dates.map(date => {
    const tracksForDate = tracks.filter(t => moment(t.date).isSame(date, 'day'));
    const completedTracks = tracksForDate.filter(t => t.completed).length;
    return goals.length > 0 ? (completedTracks / goals.length * 100).toFixed(2) : 0;
  })) %>;

  new Chart(document.getElementById('dailyGrowthChart'), {
    type: 'bar',
    data: {
      labels: labels,
      datasets: [{
        label: 'Daily Growth (%)',
        data: dataValues,
        backgroundColor: '#6366f1',
        borderRadius: 6
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: {
        y: { beginAtZero: true, max: 100, title: { display: true, text: 'Completion %' } },
        x: { title: { display: true, text: 'Day' } }
      }
    }
  });

  // Push Notifications Setup
  async function initPush() {
  if ('serviceWorker' in navigator && 'PushManager' in window) {
    const reg = await navigator.serviceWorker.register('/sw.js');
    const subscription = await reg.pushManager.subscribe({
      userVisibleOnly: true,
      applicationServerKey: '<%= process.env.VAPID_PUBLIC_KEY %>'
    });

    // Send subscription to backend
    await fetch('/subscribe', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(subscription)
    });
  } else {
    console.log("Push not supported");
  }
}
initPush();

// Register Service Worker
if ('serviceWorker' in navigator) {
  navigator.serviceWorker.register('/sw.js')
    .then(reg => console.log("Service Worker registered:", reg))
    .catch(err => console.error("Service Worker registration failed:", err));
}

function updateBellIcon() {
  const bell = document.getElementById('notificationBell');
  if (Notification.permission === "granted") {
    bell.className = "fas fa-bell text-success fs-4"; // green bell
    bell.title = "Notifications enabled";
  } else if (Notification.permission === "denied") {
    bell.className = "fas fa-bell-slash text-danger fs-4"; // red bell
    bell.title = "Notifications blocked";
  } else {
    bell.className = "fas fa-bell text-secondary fs-4"; // gray bell
    bell.title = "Notifications not yet allowed";
  }
}

// Run on load
updateBellIcon();

// Handle click
document.getElementById('notificationBell').addEventListener('click', async () => {
  if (Notification.permission === "granted") {
    alert("Notifications are already enabled. To disable, change settings in your browser.");
  } else if (Notification.permission === "denied") {
    alert("Notifications are blocked. Please enable them in browser settings.");
  } else {
    // Ask for permission again
    const permission = await Notification.requestPermission();
    updateBellIcon();
    if (permission === "granted") {
      // Register service worker and subscribe
      const reg = await navigator.serviceWorker.ready;
      const subscription = await reg.pushManager.subscribe({
        userVisibleOnly: true,
        applicationServerKey: urlBase64ToUint8Array('<%= process.env.VAPID_PUBLIC_KEY %>')
      });
      await fetch('/subscribe', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(subscription)
      });
      alert("Notifications enabled!");
    }
  }
});

// Helper function for VAPID key conversion
function urlBase64ToUint8Array(base64String) {
  const padding = '='.repeat((4 - base64String.length % 4) % 4);
  const base64 = (base64String + padding).replace(/-/g, '+').replace(/_/g, '/');
  const rawData = window.atob(base64);
  const outputArray = new Uint8Array(rawData.length);
  for (let i = 0; i < rawData.length; ++i) {
    outputArray[i] = rawData.charCodeAt(i);
  }
  return outputArray;
}

