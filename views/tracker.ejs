<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <title>ZenTrack - Daily Tracker</title>
</head>
<body class="container mt-5">
  <h1>ZenTrack - Today's Goals (<%= moment(date).format('YYYY-MM-DD') %>)</h1>
  <% if (isPast) { %>
    <p class="alert alert-warning">This date has passedâ€”cannot edit.</p>
  <% } %>
  <form action="/tracker" method="POST">
    <ul class="list-group">
      <% goals.forEach(goal => { %>
        <li class="list-group-item">
          <input type="checkbox" name="completed" <%= tracks.find(t => t.goal.toString() === goal._id.toString())?.completed ? 'checked' : '' %> <%= isPast ? 'disabled' : '' %>>
          <input type="hidden" name="goalId" value="<%= goal._id %>">
          <%= goal.name %>
        </li>
      <% }) %>
    </ul>
    <% if (!isPast) { %>
      <button type="submit" class="btn btn-success mt-3">Save Changes</button>
    <% } %>
  </form>
  <a href="/analytics" class="btn btn-info mt-3">View Analytics</a>
  <a href="/goals" class="btn btn-secondary mt-3">Manage Goals</a>
  <a href="/logout" class="btn btn-danger mt-3">Logout</a>
</body>
</html>