// Interactive Guide Logic
let currentStep = 0;
const steps = [
  { text: "Welcome to ZenTrack ðŸŽ‰", highlight: "#notificationBell" },
  { text: "This is your dashboard. Track your goals here.", highlight: "h1" },
  { text: "Check analytics to see your progress ðŸ“Š", highlight: ".analytics-link" }
];

function showStep(stepIndex) {
  const guide = document.getElementById("guide");
  const title = document.getElementById("guideTitle");
  const text = document.getElementById("guideText");
  guide.style.display = "flex";
  title.textContent = "Step " + (stepIndex + 1);
  text.textContent = steps[stepIndex].text;

  // remove old highlights
  document.querySelectorAll(".highlight").forEach(el => el.classList.remove("highlight"));
  // add new highlight
  const target = document.querySelector(steps[stepIndex].highlight);
  if (target) target.classList.add("highlight");
}

document.getElementById("nextStep").addEventListener("click", () => {
  currentStep++;
  if (currentStep < steps.length) {
    showStep(currentStep);
  } else {
    document.getElementById("guide").style.display = "none";
    // TODO: mark user as guided in DB so it doesnâ€™t show again
  }
});

// Start guide automatically for first-time users
showStep(0);

  </script>
</body>
</html>