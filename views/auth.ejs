<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <title>ZenTrack | Welcome</title>
</head>
<body class="d-flex align-items-center justify-content-center">

  <div class="bg-animations">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </div>

  <div class="auth-wrapper">
    <% if (error) { %>
      <div class="alert alert-custom animate-fade-in"><%= error %></div>
    <% } %>

    <div class="flip-card" id="flipCard">
      <div class="flip-card-inner">
        
        <!-- Login Side -->
        <div class="flip-card-front card-glass">
          <div class="brand-section">
            <h1 class="brand-logo">Zen<span>Track</span></h1>
            <p class="subtitle">Welcome back! Please login.</p>
          </div>

          <div class="mascot-container">
            <div class="eye"><div class="pupil"></div></div>
            <div class="eye"><div class="pupil"></div></div>
          </div>

          <form action="/login" method="POST" class="auth-form">
            <div class="input-group-modern">
              <input type="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="input-group-modern">
              <input type="password" name="password" class="password-field" placeholder="Password" required>
            </div>
            <button type="submit" class="btn-modern mt-3">Sign In</button>
          </form>

          <!-- Google button (only one, fixed ID) -->
          <div class="text-center mt-4">
            <p>or continue with</p>
            <button id="googleLoginBtn" class="btn btn-outline-primary btn-lg w-75">
              <i class="fab fa-google me-2"></i> Continue with Google
            </button>
          </div>
          
          <div class="footer-link">
            <span>New here?</span> 
            <a href="#" class="flip-link">Create an account</a>
          </div>
        </div>

        <!-- Signup Side -->
        <div class="flip-card-back card-glass">
          <div class="brand-section">
            <h1 class="brand-logo">Zen<span>Track</span></h1>
            <p class="subtitle">Join the community today.</p>
          </div>

          <div class="mascot-container">
            <div class="eye"><div class="pupil"></div></div>
            <div class="eye"><div class="pupil"></div></div>
          </div>

          <form action="/signup" method="POST" class="auth-form">
            <input type="email" name="email" class="form-control-modern" placeholder="Email" required>
            <input type="text" name="username" class="form-control-modern" placeholder="Username" required>
            <input type="password" name="password" class="form-control-modern password-field" placeholder="Password" required>

            <!-- Mobile with +91 prefix -->
            <div class="mb-3 position-relative">
              <label for="mobile" class="form-label">Mobile Number</label>
              <div class="input-group input-group-modern">
                <span class="input-group-text bg-white border-end-0">+91</span>
                <input 
                  type="tel" 
                  class="form-control <%= error ? 'is-invalid' : '' %>" 
                  id="mobile" 
                  name="mobile" 
                  placeholder="Enter 10-digit number"
                  pattern="[0-9]{10}" 
                  maxlength="10"
                  title="Please enter exactly 10 digits (0-9 only)"
                  required
                >
              </div>
              <div class="invalid-feedback">
                Mobile number must be exactly 10 digits.
              </div>
            </div>

            <!-- Google button (only one instance) -->
            <div class="text-center mt-4">
              <p>or continue with</p>
              <button id="googleLoginBtn" class="btn btn-outline-primary btn-lg w-75">
                <i class="fab fa-google me-2"></i> Continue with Google
              </button>
            </div>

            <button type="submit" class="btn-modern mt-3">Get Started</button>
          </form>

          <div class="footer-link">
            <span>Already a member?</span> 
            <a href="#" class="flip-link">Login</a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    // Wait for everything to load
    document.addEventListener('DOMContentLoaded', () => {
      const flipCard = document.getElementById('flipCard');
  
      if (!flipCard) {
        console.error('flipCard ID not found in DOM');
        return;
      }
  
      // Flip function
      function flip() {
        flipCard.classList.toggle('flipped');
        console.log('Flip triggered â€” current classes:', flipCard.classList);
      }
  
      // Attach to links using class (safer than onclick)
      document.querySelectorAll('.flip-link').forEach(link => {
        link.addEventListener('click', e => {
          e.preventDefault();
          flip();
        });
      });
  
      // Your eye following logic (unchanged)
      document.addEventListener('mousemove', (e) => {
        const pupils = document.querySelectorAll('.pupil');
        pupils.forEach(pupil => {
          const rect = pupil.parentElement.getBoundingClientRect();
          const eyeX = rect.left + rect.width / 2;
          const eyeY = rect.top + rect.height / 2;
          const angle = Math.atan2(e.clientY - eyeY, e.clientX - eyeX);
          const distance = 8;
          
          const x = Math.cos(angle) * distance;
          const y = Math.sin(angle) * distance;
          
          pupil.style.transform = `translate(${x}px, ${y}px)`;
        });
      });
  
      // Mobile input restriction
      const mobileInput = document.getElementById('mobile');
      if (mobileInput) {
        mobileInput.addEventListener('input', function(e) {
          this.value = this.value.replace(/\D/g, '');
          if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
          }
        });
      }
  
      // Password focus effect
      document.querySelectorAll('.password-field').forEach(field => {
        field.addEventListener('focus', () => {
          document.querySelectorAll('.eye').forEach(eye => eye.classList.add('closed'));
        });
        field.addEventListener('blur', () => {
          document.querySelectorAll('.eye').forEach(eye => eye.classList.remove('closed'));
        });
      });
  
      // Firebase Google sign-in (if you want to keep it)
      // import('/firebase-config.js').then(module => {
      //   const { auth, googleProvider, signInWithPopup } = module;
      //   // ... your Google code ...
      // }).catch(err => console.error('Firebase load failed:', err));
    });
  </script>
</body>
</html>