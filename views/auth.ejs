<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <title>ZenTrack | Welcome</title>
</head>
<body class="d-flex align-items-center justify-content-center">

  <div class="bg-animations">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </div>

  <div class="auth-wrapper">
    <% if (error) { %>
      <div class="alert alert-custom animate-fade-in"><%= error %></div>
    <% } %>

    <div class="flip-card" id="flipCard">
      <div class="flip-card-inner">
        
        <!-- Login Side -->
        <div class="flip-card-front card-glass">
          <div class="brand-section text-center">
            <h1 class="brand-logo">Zen<span>Track</span></h1>
            <p class="subtitle">Welcome back! Please login.</p>
          </div>

          <div class="mascot-container justify-content-center">
            <div class="eye"><div class="pupil"></div></div>
            <div class="eye"><div class="pupil"></div></div>
          </div>

          <form action="/login" method="POST" class="auth-form">
            <div class="mb-3">
              <input type="email" name="email" class="form-control-modern" placeholder="Email Address" required>
            </div>
            <div class="mb-3">
              <input type="password" name="password" class="form-control-modern password-field" placeholder="Password" required>
            </div>
            <button type="submit" class="btn-modern w-100">Sign In</button>
          </form>

          <div class="text-center mt-4">
            <p class="mb-2">or continue with</p>
            <button id="googleLoginBtn" class="btn btn-outline-primary w-75">
              <i class="fab fa-google me-2"></i> Continue with Google
            </button>
          </div>

          <div class="footer-link text-center mt-4">
            <span>New here?</span> 
            <a href="#" class="flip-link ms-2">Create an account</a>
          </div>
        </div>

        <!-- Signup Side -->
        <div class="flip-card-back card-glass">
          <div class="brand-section text-center">
            <h1 class="brand-logo">Zen<span>Track</span></h1>
            <p class="subtitle">Join the community today.</p>
          </div>

          <div class="mascot-container justify-content-center">
            <div class="eye"><div class="pupil"></div></div>
            <div class="eye"><div class="pupil"></div></div>
          </div>

          <form action="/signup" method="POST" class="auth-form">
            <div class="mb-3">
              <input type="email" name="email" class="form-control-modern" placeholder="Email" required>
            </div>
            <div class="mb-3">
              <input type="text" name="username" class="form-control-modern" placeholder="Username" required>
            </div>
            <div class="mb-3">
              <input type="password" name="password" class="form-control-modern password-field" placeholder="Password" required>
            </div>

            <div class="mb-4">
              <label for="mobile" class="form-label d-block text-center mb-1">Mobile Number</label>
              <div class="input-group input-group-modern mx-auto" style="max-width: 320px;">
                <span class="input-group-text bg-white border-end-0">+91</span>
                <input 
                  type="tel" 
                  class="form-control <%= error ? 'is-invalid' : '' %>" 
                  id="mobile" 
                  name="mobile" 
                  placeholder="Enter 10-digit number"
                  pattern="[0-9]{10}" 
                  maxlength="10"
                  title="Please enter exactly 10 digits (0-9 only)"
                  required
                >
              </div>
              <div class="invalid-feedback text-center">
                Mobile number must be exactly 10 digits.
              </div>
            </div>

            <div class="text-center mt-3 mb-4">
              <p class="mb-2 small">or continue with</p>
              <button id="googleLoginBtn" class="btn btn-outline-primary w-75">
                <i class="fab fa-google me-2"></i> Continue with Google
              </button>
            </div>

            <button type="submit" class="btn-modern w-100">Get Started</button>
          </form>

          <div class="footer-link text-center mt-4">
            <span>Already a member?</span> 
            <a href="#" class="flip-link ms-2">Login</a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const flipCard = document.getElementById('flipCard');

      if (!flipCard) {
        console.error('flipCard not found');
        return;
      }

      function flip() {
        flipCard.classList.toggle('flipped');
      }

      document.querySelectorAll('.flip-link').forEach(link => {
        link.addEventListener('click', e => {
          e.preventDefault();
          flip();
        });
      });

      // Eye following
      document.addEventListener('mousemove', (e) => {
        document.querySelectorAll('.pupil').forEach(pupil => {
          const rect = pupil.parentElement.getBoundingClientRect();
          const eyeX = rect.left + rect.width / 2;
          const eyeY = rect.top + rect.height / 2;
          const angle = Math.atan2(e.clientY - eyeY, e.clientX - eyeX);
          const distance = 8;
          const x = Math.cos(angle) * distance;
          const y = Math.sin(angle) * distance;
          pupil.style.transform = `translate(${x}px, ${y}px)`;
        });
      });

      // Mobile restriction
      const mobile = document.getElementById('mobile');
      if (mobile) {
        mobile.addEventListener('input', e => {
          e.target.value = e.target.value.replace(/\D/g, '').slice(0, 10);
        });
      }

      // Password eye close
      document.querySelectorAll('.password-field').forEach(field => {
        field.addEventListener('focus', () => document.querySelectorAll('.eye').forEach(e => e.classList.add('closed')));
        field.addEventListener('blur', () => document.querySelectorAll('.eye').forEach(e => e.classList.remove('closed')));
      });
    });
  </script>
</body>
</html>